{
  "name": "dev-template-backend",
  "version": "1.0.0",
  "main": "dist/main/server.js",
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig-build.json",
    "build:watch": "npm run build -- --watch",
    "start": "node dist/main/server.js",
    "dev": "nodemon -L --watch ./dist ./dist/main/server.js",
    "start:dev": "concurrently --kill-others-on-fail \"npm run build:watch\" \"npm run dev\"",
    "test": "jest --passWithNoTests --runInBand --no-cache",
    "test:watch": "npm run test -- --findRelatedTests",
    "test:ci": "npm run test -- --coverage",
    "lint": "eslint --ignore-path .gitignore --ext .ts --fix",
    "prepare": "husky"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@eslint/js": "^9.5.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.2",
    "concurrently": "^8.2.2",
    "eslint": "^9.5.0",
    "globals": "^15.5.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.3",
    "rimraf": "^5.0.7",
    "ts-jest": "^29.1.4",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.13.0",
    "husky": "^8.0.0"
  },
  "dependencies": {
    "module-alias": "^2.2.3"
  },
  "_moduleAliases": {
    "@config": "dist/config",
    "@controllers": "dist/controllers",
    "@models": "dist/models",
    "@routes": "dist/routes",
    "@services": "dist/services",
    "@utils": "dist/utils",
    "@middlewares": "dist/middlewares"
  }
}
